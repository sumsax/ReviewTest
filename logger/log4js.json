{
          "appenders": {
          "console" : {
              "type": "console",
              "category": "console"
          },
          
          "file" : {
              "category": "test-file-appender",
              "type": "file",
              "filename": "log_file.log",
              "maxLogSize": 10240,
              "backups": 3,
              "pattern": "%d{dd/MM hh:mm} %-5p %m"
          }
          },
          "categories": {
              "default" :{"appenders": ["console", "file"], "level": "DEBUG"},
              "file" : {"appenders": ["file"], "level": "DEBUG"}
          }
      }